from subprocess import Popen, PIPE
import os


basedir = os.path.abspath(os.path.dirname(__file__))


def get_git_hash():
    try:
        (stdout, stderr) = Popen(['git', 'rev-parse', 'HEAD'],
                                 stdout=PIPE,
                                 cwd='{{ app_dir }}').communicate()
        return stdout.rstrip()

    except:
        return None


